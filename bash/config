. ~/.dotfiles/bash/colors

HOST=`hostname -s`

# Change prompt color based on hostname
if [ $HOST = 'Ateles' ]; then
  COLOR=$GREEN
elif [ $HOST = 'Cacajao' ]; then
  COLOR=$VIOLET
elif [ $HOST = 'adamjspooner' ]; then
  COLOR=$RED
else
  COLOR=$WHITE
fi

# http://jonisalonen.com/2012/your-bash-prompt-needs-this/
GLUE="\[\033[G\]"

# Set the prompt to: "[<user>@<host> <pwd> ] "
export PS1="$GLUE$BRIGHT_BLACK[$COLOR\u$BRIGHT_BLACK@$COLOR\h $BLUE\w $BRIGHT_BLACK]$RESET "
