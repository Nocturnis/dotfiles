export EDITOR=vim
export GEMEDITOR=mate
export LC_CTYPE=en_US.UTF-8
export CLICOLOR=YES
# export GREP_OPTIONS="--color"
export TERM="xterm-color"

export PGDATA="/usr/local/var/postgres"
export PYTHON="/usr/local/bin/python"
export NODE_PATH="/usr/local/lib/node_modules"
export COFFEE_HOME="/usr/local/share/npm/bin"
export RUBY_HOME="$HOME/.rbenv/bin"

# Default paths
# Ensure brew is happy by adding /usr/local/(s)bin
# before /usr/bin
export PATH="$RUBY_HOME:/usr/local/bin:/usr/local/sbin:/usr/local/mysql/bin:$PATH"
eval "$(rbenv init -)"

# Additional brew paths
export PATH="$PATH:/usr/local/Cellar/python/2.7.1/bin:/usr/local/share/python"

# My path
export PATH="$PATH:$HOME/bin:$COFFEE_HOME"

export LSCOLORS=bxfxdxbxcxedabagacad

#needed for mysql and rvm to be happy
export DYLD_LIBRARY_PATH="/usr/local/mysql/lib:$DYLD_LIBRARY_PATH"
