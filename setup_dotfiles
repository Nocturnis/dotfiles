#!/usr/bin/env bash

DIR=$(cd $(dirname $0) && pwd)
TARGET="$HOME"
if [ -n "$DOTFILES_TARGET" ]; then
  TARGET="$DOTFILES_TARGET"
fi

ACK="$TARGET/.ackrc"
AGIGNORE="$TARGET/.agignore"
BP="$TARGET/.bash_profile"
BRC="$TARGET/.bashrc"
INPUTRC="$TARGET/.inputrc"
GC="$TARGET/.gitconfig"
GI="$TARGET/.gitignore"
GRC="$TARGET/.gvimrc"
IRC="$TARGET/.irbrc"
SCREEN="$TARGET/.screenrc"
VIM="$TARGET/.vim"
VRC="$TARGET/.vimrc"
ZSHRC="$TARGET/.zshrc"
TERMINATOR="$TARGET/.config/terminator/config"
OHMYZSH="$TARGET/.oh-my-zsh"
OHMYZSHCUSTOM="$TARGET/.oh-my-zsh/custom"

function erase_dotfiles {
  # echo "Erasing dotfiles..."
  rm -f $ACK
  rm -f $AGIGNORE
  rm -f $BP
  rm -f $BRC
  rm -f $INPUTRC
  rm -f $GC
  rm -f $GI
  rm -f $GRC
  rm -f $SCREEN
  rm -f $VIM
  rm -f $VRC
  rm -f $ZSHRC
  rm -f $TERMINATOR

  rm -f $TARGET/.i3/config

  rm -rf $OHMYZSH
}

function create_symlink {
  target="$1"
  link_name="$2"

  if [ "$RELATIVE_LINKS" == "1" ]; then
    ln -rs "$link_name" "$target"
  else
    ln -s "$link_name" "$target"
  fi
}

function create_symlinks {
  # echo "Creating symlinks..."
  create_symlink $DIR/ackrc $ACK
  create_symlink $DIR/agignore $AGIGNORE
  create_symlink $DIR/bash/profile $BP
  create_symlink $DIR/bash/profile $BRC
  create_symlink $DIR/bash/input $INPUTRC
  create_symlink $DIR/git/config $GC
  create_symlink $DIR/git/ignore $GI
  create_symlink $DIR/vim/grc $GRC
  create_symlink $DIR/screenrc $SCREEN
  create_symlink $DIR/vim $VIM
  create_symlink $DIR/vim/rc $VRC
  create_symlink $DIR/zsh/rc $ZSHRC
  create_symlink $DIR/zsh/oh-my-zsh $OHMYZSH

  mkdir -p $TARGET/.i3/
  create_symlink $DIR/i3/config $TARGET/.i3/config
  mkdir -p $TARGET/.config/terminator
  create_symlink $DIR/settings/terminator/config $TERMINATOR

  mkdir -p $OHMYZSHCUSTOM
  create_symlink $DIR/zsh/custom/50-aliases.zsh $OHMYZSHCUSTOM/50-aliases.zsh
  create_symlink $DIR/zsh/custom/50-env.zsh $OHMYZSHCUSTOM/50-env.zsh
  create_symlink $DIR/zsh/custom/50-highlighting.zsh $OHMYZSHCUSTOM/50-highlighting.zsh
  mkdir -p $OHMYZSHCUSTOM/themes
  create_symlink $DIR/zsh/custom/themes/my.zsh-theme $OHMYZSHCUSTOM/themes/my.zsh-theme
  mkdir -p $OHMYZSHCUSTOM/plugins
  for PLUGIN in "$(ls -A $DIR/zsh/custom/plugins/)"; do
    create_symlink $DIR/zsh/custom/plugins/$PLUGIN $OHMYZSHCUSTOM/plugins/$PLUGIN
  done
}

# make sure the directory exists
if [ -d $DIR ]; then

  echo "Replace current dotfiles? [1 or 2]"
  select RN in "Replace" "No"; do
    case $RN in
      Replace )
        cd $DIR
        git submodule update --init --recursive || true
        erase_dotfiles
        create_symlinks
        exit 0
        ;;
      
      No )
        create_symlinks
        exit 0
        ;;
    esac
  done

fi
